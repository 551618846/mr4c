#!/bin/bash

# args:
#	$1 = URI to test config file

THIS=`readlink -f $0`
BIN=`dirname $THIS`
MR4C_JAVA=`dirname $BIN`

MR4C_JAR_WITH_LIBS=$MR4C_JAVA/dist/mr4c-with-libs.jar
MR4C_CLASSPATH=$MR4C_JAR_WITH_LIBS:$MR4C_JAVA/lib/'*':$MR4C_ALGORITHM_CLASSPATH
MR4C_LIBPATH=$LD_LIBRARY_PATH:.:/usr/local/lib 

if [ $# -lt 1 ]
then
  echo "Usage: mr4c_test test_config_uri [name=val ...]"
  exit -1
fi

java -cp "$MR4C_CLASSPATH" -Dmr4c.log4j=$MR4C_LOG4J_CONFIG $MR4C_JAVA_OPTS com.google.mr4c.AlgoTestRunner $*
